{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Iniciar Servidor Ionic",
        "type": "shell",
        "command": "ionic serve",
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting dev server",
            "endsPattern": "Development server running"
          }
        },
        "options": {
          "cwd": "${workspaceFolder}"
        }
      }
    ]
  }