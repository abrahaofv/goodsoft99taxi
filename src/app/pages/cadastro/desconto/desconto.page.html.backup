<!-- src/app/pages/cadastro/desconto/desconto.page.html -->

<ion-header [translucent]="true">
  <ion-toolbar>
    <ion-buttons slot="start">
      <ion-menu-button></ion-menu-button>
    </ion-buttons>
    <ion-title>Lista de Descontos</ion-title>
  </ion-toolbar>
</ion-header>

<ion-content>
  <ion-accordion-group>
    <ion-accordion *ngFor="let desconto of descontos">
      <ion-item slot="header">
        <ion-label
          >Desconto: {{ desconto.id }} - R${{ desconto.totaldesconto }} -
          {{formatDateTime(desconto.datahora)}}</ion-label
        >
        <ion-buttons slot="end">
          <ion-button (click)="editDesconto(desconto)"> Visualizar </ion-button>
          <ion-button color="danger" (click)="deleteDesconto(desconto.id)"> Cancelar </ion-button>
        </ion-buttons>
      </ion-item>
      <ion-list slot="content">
        <ion-item>
          <ion-label>
            <h2>Código: {{ desconto.id }}</h2>
            <p>Bomba: {{ desconto.idbomba }}</p>
            <p>Bico: {{ desconto.idbico }}</p>
            <p>Combustível: {{ desconto.nome }}</p>
            <p>Preço: {{ desconto.preco }}</p>
            <p>Pagamento: {{ desconto.pagamento }}</p>
            <p>Total abastecido: {{ desconto.totallitros }}</p>
            <p>Total sem desconto: R${{ desconto.totalpreco }}</p>
            <p color="danger">Total desconto: R${{ desconto.totaldesconto }}</p>
            <p>Data e Hora: {{formatDateTime(desconto.datahora)}}</p>
          </ion-label>
        </ion-item>
      </ion-list>
    </ion-accordion>
  </ion-accordion-group>

  <ion-fab vertical="bottom" horizontal="end" slot="fixed">
    <ion-fab-button (click)="redirectGerarDesconto()">
      <ion-icon name="add"></ion-icon>
    </ion-fab-button>
  </ion-fab>
</ion-content>
